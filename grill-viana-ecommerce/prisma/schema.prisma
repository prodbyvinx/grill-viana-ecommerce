datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  sku          String   @unique
  ncm          String?  // ex: "73218900"
  description  String
  priceCents   Int      // preço em centavos para evitar float
  stock        Int      @default(0)
  widthCm      Int?
  heightCm     Int?
  depthCm      Int?
  material     String?  // ex: "Aço Inox 430"
  images       ProductImage[]
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ProductImage {
  id        String  @id @default(cuid())
  url       String
  alt       String?
  position  Int      @default(0)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
}